@{
    ViewBag.Title = "Index";
}

<link href="~/assets/css/homepage.css" rel="stylesheet" type="text/css" />

<div class="carousel fade-carousel slide" data-ride="carousel" data-interval="4000" id="bs-carousel" style="margin-top: -71px">
    <!-- Overlay -->
    <div class="overlay"></div>
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#bs-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#bs-carousel" data-slide-to="1"></li>
        <li data-target="#bs-carousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item slides active">
            <div class="slide-1"></div>
            <div class="hero">
                <div style="display:block">
                    <span style="font-size:40px">Rendezvous</span>
                    <h3>Bringing locals and migrants together</h3>
                </div>
                <a href="#square_section" class="btn btn-hero btn-lg" role="button">Learn More</a>
            </div>
        </div>
    </div>
</div>
<div class="row" id="what_is" style="background-color: #E0F2F1">
    <div class="container">
        <h2>How does it work</h2>
        <p>Provide refugees access to all they need to live and belong to a strange land</p>
    </div>
</div>
<div class="row" id="for_migrants" style="background-color: #B2DFDB">
    <div class="container">
        <h2>For Migrants</h2>
        <p>Supply all the refugees need to live and belong to a strange land</p>
    </div>
</div>
<div class="row" id="for_locals" style="background-color: #80CBC4">
    <div class="container">
        <h2>For Locals</h2>
        <p>Share and read information about the latest news and event related to the topic</p>
    </div>
</div>
